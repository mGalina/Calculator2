<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/resultField"
        android:layout_width="403dp"
        android:layout_height="100dp"
        android:layout_margin="1dp"
        android:background="@color/colorBackground"
        android:gravity="right"
        android:hint="@string/_0"
        android:padding="5dp"
        android:textColor="@color/colorText1"
        android:textSize="60sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/bt_clean"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/resultField"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/colorButton3"
        android:gravity="center"
        android:text="@string/clean"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_sign"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/resultField"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/bt_clean"
        android:backgroundTint="@color/colorButton3"
        android:gravity="center"
        android:text="@string/sign"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_percent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/resultField"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/bt_sign"
        android:backgroundTint="@color/colorButton3"
        android:gravity="center"
        android:text="@string/percent"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_division"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/resultField"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_percent"
        android:backgroundTint="@color/colorButton2"
        android:gravity="center"
        android:text="@string/division"
        android:textColor="@color/colorText1"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_clean"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/_7"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_sign"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_7"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/_8"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_sign"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_8"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/_9"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_multiplication"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_sign"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_9"
        android:backgroundTint="@color/colorButton2"
        android:gravity="center"
        android:text="@string/_x"
        android:textColor="@color/colorText1"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_7"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/_4"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_7"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_4"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/_5"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_7"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_5"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/_6"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_minus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_7"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_6"
        android:backgroundTint="@color/colorButton2"
        android:gravity="center"
        android:text="@string/minus"
        android:textColor="@color/colorText1"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_4"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/_1"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_4"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_1"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/_2"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_4"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_2"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/_3"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_plus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_4"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_3"
        android:backgroundTint="@color/colorButton2"
        android:gravity="center"
        android:text="@string/plus"
        android:textColor="@color/colorText1"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_0"
        android:layout_width="201dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_1"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/_0"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_point"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_1"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_0"
        android:backgroundTint="@color/colorButton"
        android:gravity="center"
        android:text="@string/point"
        android:textSize="40sp" />

    <Button
        android:id="@+id/bt_equal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/bt_1"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_toEndOf="@id/bt_point"
        android:backgroundTint="@color/colorButton2"
        android:gravity="center"
        android:text="@string/equal"
        android:textColor="@color/colorText1"
        android:textSize="40sp" />

</RelativeLayout>